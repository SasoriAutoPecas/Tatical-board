│   ├── animations.js  # Lógica de animações com GSAP
│   ├── export.js      # Funções de exportação (JSON, imagens, vídeos)
│   └── ui.js          # Controle da interface e eventos
├── libs/              # Bibliotecas externas
│   ├── gsap.min.js    # Animações suaves
│   ├── html2canvas.js # Exportação de imagens
│   └── ffmpeg.js      # Exportação de vídeos
└── assets/            # Qualquer recurso adicional (opcional)
    